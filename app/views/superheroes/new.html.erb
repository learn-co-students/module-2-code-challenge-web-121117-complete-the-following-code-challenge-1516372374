<h1>I was bitten by a radioactive something, behold I am now:</h1>

<% if flash[:error] %>
    <div>
      <ul>
        <% flash[:error].each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
<% end %>




<%= form_for @superhero do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
  <%= f.label :super_name, "Super Name:" %>
  <%= f.text_field :super_name %>
  <%= f.collection_select( :superpower_id, @superpowers, :id, :name) %>
  <%= f.submit %>
<% end %>
