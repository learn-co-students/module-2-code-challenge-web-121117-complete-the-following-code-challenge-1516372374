<% if flash[:error] %>
  <% flash[:error].each do |message| %>
  <h3 style="color:red;"><%=  message %></h3>
  <% end %>
<% end %>

<%= form_for @superhero do |f| %>
  Name: <%= f.text_field :name %>
  <br />
  Super Name: <%= f.text_field :super_name %>
  <br />
  Pick Your Power! <%= f.collection_select :superpower_id, @superpowers, :id, :name %>
  <%= f.submit %>
<% end %>
