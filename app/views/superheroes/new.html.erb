<% if flash[:error] %>
  <% flash[:error].each do |message| %>
  <%=  message %>
  <% end %> 
<% end %>

<%= form_for @superhero do |f| %>
  Name: <%= f.text_field :name %>
  Super Name: <%= f.text_field :super_name %>
  <%= f.collection_select :superpower_id, @superpowers, :id, :name %>
  <%= f.submit %>
<% end %>
