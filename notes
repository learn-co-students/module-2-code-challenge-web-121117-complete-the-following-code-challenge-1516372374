old broken index view for superheroes:

<h2>All Superheroes</h2>

<%= form_tag superheroes_path, :method => :get do %>
  <%= label_tag(:q, "Search for heroes with which power?") %>
  <%= collection_select @superheroes, :superpower_id, @superpowers, :id, :name %>
  <%= submit_tag 'Filter' %>
<% end %>

<%= params.inspect %>


<ul>
  <% @superheroes.each do |superhero| %>
    <% if params[:superpower_id] == superhero.superpower_id %>
      <li>
        <%= link_to superhero.super_name, superhero %>
      </li>
      <br>
    <% end %>
  <% end %>
</ul>
